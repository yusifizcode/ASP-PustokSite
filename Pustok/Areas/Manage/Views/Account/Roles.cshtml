@model List<IdentityRole>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <a asp-action="createrole" asp-controller="account" class="btn btn-primary">Create</a>
        </div>
        <div class="col-md-10 mx-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Roles</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@role.Name</td>
                            <td>
                                <a asp-action="edit" asp-route-id="@role.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="delete" asp-route-id="@role.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
